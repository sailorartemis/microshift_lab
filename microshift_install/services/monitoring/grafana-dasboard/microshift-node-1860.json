{
  "uid": "microshift-node-1860",
  "title": "MicroShift Node Overview (1860-style)",
  "tags": ["microshift", "node-exporter"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "node",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(node_uname_info, nodename)",
        "refresh": 1,
        "current": {
          "text": "All",
          "value": ""
        }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "CPU Usage %",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "100 * (1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) by (nodename))",
          "legendFormat": "{{nodename}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Memory Usage %",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
          "legendFormat": "memory"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Root FS Usage %",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "100 * (1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}))",
          "legendFormat": "/"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (5m / 15m)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "100 * (1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) by (nodename))",
          "legendFormat": "5m {{nodename}}"
        },
        {
          "expr": "100 * (1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[15m])) by (nodename))",
          "legendFormat": "15m {{nodename}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Load Average",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
      "targets": [
        { "expr": "node_load1", "legendFormat": "1m" },
        { "expr": "node_load5", "legendFormat": "5m" },
        { "expr": "node_load15", "legendFormat": "15m" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network Receive (bytes/sec)",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m])",
          "legendFormat": "{{device}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Network Transmit (bytes/sec)",
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m])",
          "legendFormat": "{{device}}"
        }
      ]
    }
  ]
}
